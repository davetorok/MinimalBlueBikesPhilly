<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="name.jugglerdave.minimalindego.activity.StatisticsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bikes and Docks"
        android:id="@+id/statsbikesanddockstextview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Bikes Available"
        android:id="@+id/statstotalbikesavailabletextview"
        android:layout_gravity="left"
        android:layout_toEndOf="@+id/statsnumtotalbikesavailable"
        android:layout_toRightOf="@+id/statsnumtotalbikesavailable"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/statsnumtotalbikesavailable" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="325"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnumtotalbikesavailable"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statsbikesanddockstextview"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:layout_alignParentTop="false"
        android:background="#ff3cd2ff"
        android:layout_marginTop="4dp"
        android:paddingRight="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Docks Available"
        android:id="@+id/statsactivedockstextview"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statstotalbikesavailabletextview"
        android:layout_toRightOf="@+id/statsnumactivedocksavailable"
        android:layout_toEndOf="@+id/statsnumactivedocksavailable"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnumactivedocksavailable" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="377"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnumactivedocksavailable"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statsnumtotalbikesavailable"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:paddingRight="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inactive Docks"
        android:id="@+id/statsinactivedockstextview"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statsactivedockstextview"
        android:layout_toRightOf="@+id/statsnuminactivedocks"
        android:layout_toEndOf="@+id/statsnuminactivedocks"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnuminactivedocks" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="543"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnuminactivedocks"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statsnumactivedocksavailable"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:paddingRight="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Station Status"
        android:id="@+id/statsstationstatustextview"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statsnuminactivedocks"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Active Stations"
        android:id="@+id/statsactivestations"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statsstationstatustextview"
        android:layout_toRightOf="@+id/statsnumactivestations"
        android:layout_toEndOf="@+id/statsnumactivestations"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnumactivestations" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="543"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnumactivestations"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/statsstationstatustextview"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:layout_marginTop="4dp"
        android:autoText="false"
        android:paddingRight="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inactive Stations"
        android:id="@+id/statsinactivestations"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statsactivestations"
        android:layout_toRightOf="@+id/statsnuminactivestations"
        android:layout_toEndOf="@+id/statsnuminactivestations"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnuminactivestations" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="333"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnuminactivestations"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statsnumactivestations"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:background="#ffadadad"
        android:paddingRight="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Capacity Status"
        android:id="@+id/statscapacitytextview"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statsnuminactivestations"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Full Stations"
        android:id="@+id/statsfullstationstextview"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statscapacitytextview"
        android:layout_toRightOf="@+id/statsnumfullstations"
        android:layout_toEndOf="@+id/statsnumfullstations"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnumfullstations" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="134"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnumfullstations"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statscapacitytextview"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:layout_marginTop="4dp"
        android:background="#ffff79fb"
        android:paddingRight="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nearly Full Stations"
        android:id="@+id/statsnearlyfullstationstextview"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statsfullstationstextview"
        android:layout_toRightOf="@+id/statsnumnearlyfullstations"
        android:layout_toEndOf="@+id/statsnumnearlyfullstations"

        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnumnearlyfullstations" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="222"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnumnearlyfullstations"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statsnumfullstations"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:paddingRight="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nearly Empty Stations"
        android:id="@+id/statsnearlyemptytextview"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statsnearlyfullstationstextview"
        android:layout_toRightOf="@+id/statsnumnearlyemptystations"
        android:layout_toEndOf="@+id/statsnumnearlyemptystations"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnumnearlyemptystations" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="353"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnumnearlyemptystations"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statsnumnearlyfullstations"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:background="#fffffd02"
        android:paddingRight="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Empty Stations"
        android:id="@+id/statsemptytextview"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/statsnearlyemptytextview"
        android:layout_toRightOf="@+id/statsnumemptystations"
        android:layout_toEndOf="@+id/statsnumemptystations"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/statsnumemptystations" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="888"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/statsnumemptystations"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@id/statsnumnearlyemptystations"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:background="#ffff6464"
        android:paddingRight="2dp" />

    <TextView android:text="@string/string_lastRefreshInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statsrefreshdatetextview"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/statsnumemptystations"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp" />
</RelativeLayout>
</ScrollView>
