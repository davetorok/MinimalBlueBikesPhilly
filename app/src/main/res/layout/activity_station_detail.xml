<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="name.jugglerdave.minimalindego.activity.StationDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Station Name"
        android:id="@+id/stationnametextview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:gravity="fill_horizontal|center_vertical"
        android:paddingRight="36dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:id="@+id/stationaddresstextview"
        android:layout_below="@+id/addresslabeltextview"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Station Status"
        android:id="@+id/stationstatustextview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/stationstatuslabel" />


    <CheckBox
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="?android:attr/starStyle"
        android:text=""
        android:onClick="onClickFavoriteStar"
        android:gravity="right"
        android:paddingLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bikes Available"
        android:id="@+id/bikesavailabletextview"
        android:layout_gravity="left"
        android:layout_alignTop="@+id/bikesavailablenumtextview"
        android:layout_toRightOf="@+id/docksavailablenumtextview"
        android:layout_toEndOf="@+id/docksavailablenumtextview"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Docks Available"
        android:id="@+id/docskavailabletextview"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:layout_below="@+id/bikesavailablenumtextview"
        android:layout_toRightOf="@+id/docksavailablenumtextview"
        android:layout_toEndOf="@+id/docksavailablenumtextview"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="23"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/bikesavailablenumtextview"
        android:layout_below="@+id/stationstatustextview"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:textAlignment="gravity"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="32"
        android:ems="2"
        android:maxEms="3"
        android:id="@+id/docksavailablenumtextview"
        android:layout_below="@+id/bikesavailablenumtextview"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:textAlignment="viewEnd"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status"
        android:id="@+id/stationstatuslabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stationaddresstextview"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/addresslabeltextview"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stationnametextview"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location Hint"
        android:id="@+id/hintlabeltextview"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/docksavailablenumtextview"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hint"
        android:id="@+id/hinttextview"
        android:layout_below="@+id/hintlabeltextview"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="false" />
    <name.jugglerdave.minimalindego.view.BikeIconImageView
        android:id="@+id/bikeIconDetailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:scaleType="centerInside"
        android:background="#ffff8527"
        android:src="@drawable/bicycleicon"
        android:layout_alignTop="@+id/bikesavailablenumtextview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
</ScrollView>